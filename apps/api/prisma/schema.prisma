generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Household {
  id          String           @id
  createdAt   DateTime         @default(now())
  items       InventoryItem[]
  recipes     Recipe[]
  suggestions MealSuggestion[]
}

model InventoryItem {
  id             String    @id @default(uuid())
  householdId    String
  ingredientId   String
  quantity       Float
  expirationDate DateTime?

  household  Household  @relation(fields: [householdId], references: [id])
  ingredient Ingredient @relation(fields: [ingredientId], references: [id])

  @@unique([householdId, ingredientId])
  @@index([householdId])
  @@index([ingredientId])
}

model Recipe {
  id          String @id
  householdId String
  name        String

  household   Household          @relation(fields: [householdId], references: [id])
  ingredients RecipeIngredient[]

  @@index([householdId])
}

model RecipeIngredient {
  id           String @id @default(uuid())
  recipeId     String
  ingredientId String
  amount       Float

  recipe     Recipe     @relation(fields: [recipeId], references: [id])
  ingredient Ingredient @relation(fields: [ingredientId], references: [id])

  @@index([recipeId])
  @@index([ingredientId])
}

enum SuggestionStatus {
  PROPUESTA
  ACEPTADA
  MODIFICADA
}

model MealSuggestion {
  id          String           @id @default(uuid())
  householdId String
  date        DateTime
  slot        String
  status      SuggestionStatus @default(PROPUESTA)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  household Household              @relation(fields: [householdId], references: [id])
  recipes   MealSuggestionRecipe[]

  @@unique([householdId, date, slot])
  @@index([householdId, date])
}

model MealSuggestionRecipe {
  id           String @id @default(uuid())
  suggestionId String
  recipeId     String
  recipeName   String
  position     Int

  suggestion MealSuggestion @relation(fields: [suggestionId], references: [id])

  @@index([suggestionId])
}

model Ingredient {
  id             String   @id @default(uuid())
  name           String
  normalizedName String
  category       String? // opcional
  createdAt      DateTime @default(now())

  // reverse relations
  inventoryItems    InventoryItem[]
  recipeIngredients RecipeIngredient[]

  @@unique([normalizedName])
  @@index([normalizedName])
}
